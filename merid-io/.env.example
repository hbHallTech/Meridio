# ── Database ──
DATABASE_URL="postgresql://user:password@localhost:5432/meridio?schema=public"

# ── NextAuth.js ──
AUTH_SECRET=""              # REQUIRED — Generate with: openssl rand -base64 32
AUTH_TRUST_HOST=true
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_IDLE_TIMEOUT_MINUTES="30"  # Auto-logout after N minutes of inactivity

# ── Encryption (AES-256-GCM) ──
ENCRYPTION_KEY=""           # REQUIRED — Generate with: openssl rand -hex 32
                            # Used to encrypt SMTP/IMAP passwords and webhook secrets
                            # WARNING: Do NOT change once set — existing encrypted data becomes unreadable

# ── Cron Jobs ──
CRON_SECRET=""              # REQUIRED — Generate with: openssl rand -hex 32
                            # Passed as: Authorization: Bearer <value>

# ── Email (SMTP) ──
SMTP_HOST="smtp.office365.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM=""

# ── File uploads (Vercel Blob) ──
BLOB_READ_WRITE_TOKEN=""    # Get from: Vercel Dashboard > Storage > Blob

# ── Documents Module (IMAP import) ──
DOCS_IMAP_HOST=""
DOCS_IMAP_PORT="993"
DOCS_IMAP_USER=""
DOCS_IMAP_PASS=""
DOCS_IMPORT_CRON_SECRET=""  # Generate with: openssl rand -hex 32
