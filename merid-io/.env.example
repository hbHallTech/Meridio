# Database
DATABASE_URL="postgresql://user:password@localhost:5432/meridio?schema=public"

# NextAuth.js
AUTH_SECRET="your-auth-secret-here"  # Generate with: npx auth secret
AUTH_URL="http://localhost:3000"

# OAuth Providers (optional)
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""
AUTH_MICROSOFT_ENTRA_ID=""
AUTH_MICROSOFT_ENTRA_SECRET=""
AUTH_MICROSOFT_ENTRA_TENANT_ID=""

# Email (Office 365 / SMTP)
SMTP_HOST="smtp.office365.com"
SMTP_PORT="587"
SMTP_USER="noreply@yourdomain.com"
SMTP_PASSWORD="your-email-password"
SMTP_FROM="Meridio <noreply@yourdomain.com>"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_DEFAULT_LOCALE="fr"

# File uploads
UPLOAD_DIR="./public/uploads"
MAX_FILE_SIZE="5242880"  # 5MB in bytes
